<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientTrackPro.UI.Views.StreamingPage"
             Title="Streaming">
    <Grid RowDefinitions="Auto,*" Padding="20">
        <!-- Stream Controls -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Stream Controls" 
                   FontSize="24" 
                   FontAttributes="Bold"/>
            
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Text="Start Stream" 
                        Command="{Binding StartStreamCommand}"
                        BackgroundColor="{StaticResource Primary}"/>
                <Button Text="End Stream" 
                        Command="{Binding EndStreamCommand}"
                        BackgroundColor="{StaticResource Danger}"/>
            </Grid>

            <Frame Padding="15" Margin="0,10">
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="5">
                    <Label Grid.Row="0" Grid.Column="0" Text="Title:" VerticalOptions="Center"/>
                    <Entry Grid.Row="0" Grid.Column="1" Text="{Binding StreamTitle}" Placeholder="Enter stream title"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Category:" VerticalOptions="Center"/>
                    <Picker Grid.Row="1" Grid.Column="1" 
                            ItemsSource="{Binding Categories}"
                            SelectedItem="{Binding SelectedCategory}"/>

                    <Label Grid.Row="2" Grid.Column="0" Text="Platform:" VerticalOptions="Center"/>
                    <Picker Grid.Row="2" Grid.Column="1" 
                            ItemsSource="{Binding Platforms}"
                            SelectedItem="{Binding SelectedPlatform}"/>
                </Grid>
            </Frame>
        </VerticalStackLayout>

        <!-- Stream Stats -->
        <ScrollView Grid.Row="1">
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" RowSpacing="20" ColumnSpacing="20">
                <!-- Current Stats -->
                <Frame Grid.Row="0" Grid.ColumnSpan="2" Padding="15">
                    <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <Label Text="Viewers" FontSize="14" TextColor="Gray"/>
                            <Label Text="{Binding CurrentViewers}" FontSize="24" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="Chat Messages" FontSize="14" TextColor="Gray"/>
                            <Label Text="{Binding ChatMessages}" FontSize="24" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2" Spacing="5">
                            <Label Text="Duration" FontSize="14" TextColor="Gray"/>
                            <Label Text="{Binding StreamDuration}" FontSize="24" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="3" Spacing="5">
                            <Label Text="Followers" FontSize="14" TextColor="Gray"/>
                            <Label Text="{Binding NewFollowers}" FontSize="24" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Chat -->
                <Frame Grid.Row="1" Grid.Column="0" Padding="15">
                    <Grid RowDefinitions="Auto,*,Auto">
                        <Label Grid.Row="0" Text="Live Chat" FontSize="18" FontAttributes="Bold"/>
                        
                        <CollectionView Grid.Row="1" 
                                      ItemsSource="{Binding ChatMessages}"
                                      Margin="0,10">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="Auto,*" Padding="5">
                                        <Image Grid.Column="0" 
                                               Source="{Binding UserAvatar}" 
                                               HeightRequest="32" 
                                               WidthRequest="32"/>
                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                            <Label Text="{Binding Username}" 
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding Message}" 
                                                   FontSize="14"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <Entry Placeholder="Type a message..."
                                   Text="{Binding ChatMessage}"/>
                            <Button Text="Send" 
                                    Command="{Binding SendChatMessageCommand}"
                                    BackgroundColor="{StaticResource Primary}"/>
                        </Grid>
                    </Grid>
                </Frame>

                <!-- Stream Alerts -->
                <Frame Grid.Row="1" Grid.Column="1" Padding="15">
                    <Grid RowDefinitions="Auto,*">
                        <Label Grid.Row="0" Text="Stream Alerts" FontSize="18" FontAttributes="Bold"/>
                        
                        <CollectionView Grid.Row="1" 
                                      ItemsSource="{Binding StreamAlerts}"
                                      Margin="0,10">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="Auto,*" Padding="5">
                                        <Image Grid.Column="0" 
                                               Source="{Binding AlertIcon}" 
                                               HeightRequest="24" 
                                               WidthRequest="24"/>
                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                            <Label Text="{Binding Title}" 
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding Description}" 
                                                   FontSize="12" 
                                                   TextColor="Gray"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Frame>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage> 