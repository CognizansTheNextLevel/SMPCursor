<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ClientTrackPro.UI"
             x:Class="ClientTrackPro.UI.Views.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Grid Grid.Row="0" BackgroundColor="{StaticResource Primary}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Image Grid.Column="0" 
                   Source="logo.png"
                   HeightRequest="40"
                   Margin="10,5"/>

            <!-- Navigation Menu -->
            <HorizontalStackLayout Grid.Column="1" 
                                  HorizontalOptions="Center"
                                  Spacing="20">
                <Button Text="Dashboard" 
                        Clicked="OnDashboardClicked"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Text="Streaming" 
                        Clicked="OnStreamingClicked"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Text="Chat" 
                        Clicked="OnChatClicked"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Text="Media" 
                        Clicked="OnMediaClicked"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Text="Analytics" 
                        Clicked="OnAnalyticsClicked"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Text="Settings" 
                        Clicked="OnSettingsClicked"
                        Style="{StaticResource NavButtonStyle}"/>
            </HorizontalStackLayout>

            <!-- User Menu -->
            <Button Grid.Column="2"
                    Text="Account"
                    Clicked="OnAccountClicked"
                    Style="{StaticResource NavButtonStyle}"
                    Margin="10"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <ContentPresenter x:Name="MainContent"/>
        </Grid>

        <!-- Subscription Banner (for Free tier) -->
        <Grid Grid.Row="1" 
              IsVisible="{Binding ShowSubscriptionBanner}"
              BackgroundColor="{StaticResource Accent}"
              VerticalOptions="Start">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Label Text="Upgrade to Streamer or Mogul for more features!"
                   TextColor="White"
                   VerticalOptions="Center"
                   Margin="20,10"/>
            
            <Button Grid.Column="1"
                    Text="Upgrade Now"
                    Clicked="OnUpgradeClicked"
                    Margin="20,10"/>
        </Grid>
    </Grid>

</ContentPage> 